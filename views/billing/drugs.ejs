<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Billing - Drugs/Consumables - Health Haven</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/lucide.js?v=1"></script>
  <style>
    .prescription-table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    .prescription-table th, .prescription-table td { padding: 0.5rem; border: 1px solid var(--neutral-200); }
    .prescription-table th { background: var(--neutral-100); font-weight: 600; }
    .prescription-table input, .prescription-table select { width: 100%; padding: 0.5rem; border: 1px solid var(--neutral-300); border-radius: 4px; }
    .prescription-table .drug-search { position: relative; }
    .suggestions { position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid var(--neutral-300); max-height: 200px; overflow-y: auto; z-index: 10; display: none; }
    .suggestion-item { padding: 0.5rem; cursor: pointer; border-bottom: 1px solid var(--neutral-200); }
    .suggestion-item:hover { background: var(--neutral-100); }
  </style>
</head>
<body>
  <div class="app-container">
    <%- include('../partials/sidebar', { activePage: 'billing' }) %>
    
    <main class="main-content">
      <div class="top-bar">
        <h1 class="page-title">Billing - Drugs / Consumables</h1>
        <div class="flex items-center gap-md">
          <% if (typeof user !== 'undefined' && user) { %>
            <span class="text-muted" style="font-size: 0.875rem; display: flex; align-items: center; gap: 0.25rem;">
              <i data-lucide="user" class="icon icon-sm"></i><%= user %>
            </span>
          <% } %>
        </div>
      </div>

      <div class="content-wrapper">
        <div class="card">
          <div class="card-header">
            <h2 class="card-title">Prescription Details</h2>
          </div>
          <div class="card-body">
            <form id="drugsForm">
              <input type="hidden" id="billId" value="<%= bill ? bill._id : '' %>">
              
              <div style="margin-bottom: 1rem;">
                <button type="button" class="btn btn-secondary" onclick="addDrugRow()">
                  <i data-lucide="plus" class="icon icon-sm"></i>
                  Add Drug Row
                </button>
              </div>

              <div style="overflow-x: auto;">
                <table class="prescription-table" id="drugsTable">
                  <thead>
                    <tr>
                      <th style="width: 25%;">Drug</th>
                      <th style="width: 10%;">No. of Units</th>
                      <th style="width: 10%;">No. of Days</th>
                      <th style="width: 15%;">Times Daily</th>
                      <th style="width: 12%;">Duration</th>
                      <th style="width: 13%;">Price/Unit</th>
                      <th style="width: 10%;">Subtotal</th>
                      <th style="width: 5%;"></th>
                    </tr>
                  </thead>
                  <tbody id="drugsTableBody">
                    <% if (bill && bill.drugs && bill.drugs.length > 0) { %>
                      <% bill.drugs.forEach((drug, index) => { %>
                        <tr data-row="<%= index %>">
                          <td class="drug-search">
                            <input type="text" class="drug-input" value="<%= drug.drugName %>" data-drug-id="<%= drug.drugId %>" placeholder="Search drug..." required>
                            <div class="suggestions"></div>
                          </td>
                          <td><input type="number" class="units-input" min="1" value="<%= drug.numberOfUnits %>" required></td>
                          <td><input type="number" class="days-input" min="1" value="<%= drug.numberOfDays %>" required></td>
                          <td>
                            <select class="times-input" required>
                              <option value="1 Daily" <%= drug.timesDaily === '1 Daily' ? 'selected' : '' %>>1 Daily</option>
                              <option value="BD" <%= drug.timesDaily === 'BD' ? 'selected' : '' %>>BD</option>
                              <option value="TDS" <%= drug.timesDaily === 'TDS' ? 'selected' : '' %>>TDS</option>
                              <option value="QDS" <%= drug.timesDaily === 'QDS' ? 'selected' : '' %>>QDS</option>
                              <option value="AD" <%= drug.timesDaily === 'AD' ? 'selected' : '' %>>AD</option>
                              <option value="Weekly" <%= drug.timesDaily === 'Weekly' ? 'selected' : '' %>>Weekly</option>
                            </select>
                          </td>
                          <td>
                            <select class="duration-input" required>
                              <option value="Daily" <%= drug.duration === 'Daily' ? 'selected' : '' %>>Daily</option>
                              <option value="Weekly" <%= drug.duration === 'Weekly' ? 'selected' : '' %>>Weekly</option>
                              <option value="Monthly" <%= drug.duration === 'Monthly' ? 'selected' : '' %>>Monthly</option>
                            </select>
                          </td>
                          <td><input type="number" class="price-input" min="0" step="0.01" value="<%= drug.pricePerUnit %>" readonly></td>
                          <td><input type="number" class="subtotal-input" value="<%= drug.subtotal %>" readonly></td>
                          <td><button type="button" class="btn-icon" onclick="removeRow(this)"><i data-lucide="trash-2" class="icon icon-sm"></i></button></td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>

              <div style="margin-top: 1rem; text-align: right;">
                <strong>Total Drugs: ₦<span id="totalDrugs">0.00</span></strong>
              </div>

              <div class="form-actions" style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='/billing/consultation?billId=' + document.getElementById('billId').value">
                  <i data-lucide="arrow-left" class="icon icon-sm"></i>
                  Back
                </button>
                <button type="submit" class="btn btn-primary">
                  <i data-lucide="save" class="icon icon-sm"></i>
                  Save & Continue
                </button>
                <button type="button" class="btn btn-secondary" onclick="printBill('drugs')">
                  <i data-lucide="printer" class="icon icon-sm"></i>
                  Print Bill
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    let rowCounter = 0;

    function addDrugRow() {
      const tbody = document.getElementById('drugsTableBody');
      const row = document.createElement('tr');
      row.setAttribute('data-row', rowCounter++);
      row.innerHTML = `
        <td class="drug-search">
          <input type="text" class="drug-input" placeholder="Search drug..." required>
          <div class="suggestions"></div>
        </td>
        <td><input type="number" class="units-input" min="1" value="1" required></td>
        <td><input type="number" class="days-input" min="1" value="1" required></td>
        <td>
          <select class="times-input" required>
            <option value="1 Daily">1 Daily</option>
            <option value="BD">BD</option>
            <option value="TDS">TDS</option>
            <option value="QDS">QDS</option>
            <option value="AD">AD</option>
            <option value="Weekly">Weekly</option>
          </select>
        </td>
        <td>
          <select class="duration-input" required>
            <option value="Daily">Daily</option>
            <option value="Weekly">Weekly</option>
            <option value="Monthly">Monthly</option>
          </select>
        </td>
        <td><input type="number" class="price-input" min="0" step="0.01" value="0" readonly></td>
        <td><input type="number" class="subtotal-input" value="0" readonly></td>
        <td><button type="button" class="btn-icon" onclick="removeRow(this)"><i data-lucide="trash-2" class="icon icon-sm"></i></button></td>
      `;
      tbody.appendChild(row);
      attachRowListeners(row);
      lucide.createIcons();
    }

    function removeRow(btn) {
      btn.closest('tr').remove();
      calculateTotal();
    }

    function attachRowListeners(row) {
      const drugInput = row.querySelector('.drug-input');
      const unitsInput = row.querySelector('.units-input');
      const daysInput = row.querySelector('.days-input');
      const priceInput = row.querySelector('.price-input');
      const subtotalInput = row.querySelector('.subtotal-input');
      const suggestionsDiv = row.querySelector('.suggestions');

      drugInput.addEventListener('input', async (e) => {
        const search = e.target.value;
        if (search.length < 2) {
          suggestionsDiv.style.display = 'none';
          return;
        }

        try {
          const response = await fetch(`/api/billing/drugs/search?search=${encodeURIComponent(search)}`);
          const data = await response.json();
          
          if (data.success && data.data.length > 0) {
            suggestionsDiv.innerHTML = data.data.map(drug => 
              `<div class="suggestion-item" data-drug-id="${drug._id}" data-drug-name="${drug.itemName}" data-price="${drug.sellingPrice}">
                ${drug.itemName} - ₦${drug.sellingPrice.toFixed(2)} (Stock: ${drug.quantity})
              </div>`
            ).join('');
            suggestionsDiv.style.display = 'block';

            suggestionsDiv.querySelectorAll('.suggestion-item').forEach(item => {
              item.addEventListener('click', () => {
                drugInput.value = item.dataset.drugName;
                drugInput.dataset.drugId = item.dataset.drugId;
                priceInput.value = item.dataset.price;
                suggestionsDiv.style.display = 'none';
                calculateRowSubtotal(row);
              });
            });
          } else {
            suggestionsDiv.style.display = 'none';
          }
        } catch (error) {
          console.error('Error searching drugs:', error);
        }
      });

      document.addEventListener('click', (e) => {
        if (!row.contains(e.target)) {
          suggestionsDiv.style.display = 'none';
        }
      });

      [unitsInput, daysInput].forEach(input => {
        input.addEventListener('input', () => calculateRowSubtotal(row));
      });
    }

    function calculateRowSubtotal(row) {
      const units = parseFloat(row.querySelector('.units-input').value) || 0;
      const days = parseFloat(row.querySelector('.days-input').value) || 0;
      const price = parseFloat(row.querySelector('.price-input').value) || 0;
      const subtotal = units * days * price;
      row.querySelector('.subtotal-input').value = subtotal.toFixed(2);
      calculateTotal();
    }

    function calculateTotal() {
      const subtotals = Array.from(document.querySelectorAll('.subtotal-input'));
      const total = subtotals.reduce((sum, input) => sum + (parseFloat(input.value) || 0), 0);
      document.getElementById('totalDrugs').textContent = total.toFixed(2);
    }

    document.getElementById('drugsForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const billId = document.getElementById('billId').value;
      if (!billId) {
        alert('Please complete previous sections first');
        window.location.href = '/billing/cards';
        return;
      }

      const rows = document.querySelectorAll('#drugsTableBody tr');
      const drugs = Array.from(rows).map(row => {
        const drugInput = row.querySelector('.drug-input');
        return {
          drugId: drugInput.dataset.drugId,
          drugName: drugInput.value,
          numberOfUnits: parseInt(row.querySelector('.units-input').value),
          numberOfDays: parseInt(row.querySelector('.days-input').value),
          timesDaily: row.querySelector('.times-input').value,
          duration: row.querySelector('.duration-input').value,
          pricePerUnit: parseFloat(row.querySelector('.price-input').value),
          subtotal: parseFloat(row.querySelector('.subtotal-input').value)
        };
      });

      try {
        const response = await fetch(`/api/billing/bills/${billId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ drugs }),
        });
        
        const data = await response.json();
        
        if (data.success) {
          window.location.href = `/billing/procedure?billId=${billId}`;
        } else {
          alert('Error saving drugs');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error saving drugs');
      }
    });

    async function printBill(section) {
      const billId = document.getElementById('billId').value;
      if (!billId) {
        alert('Please save first');
        return;
      }
      
      try {
        const response = await fetch(`/api/billing/bills/${billId}/print?section=${section}`);
        const data = await response.json();
        
        if (data.success) {
          const printWindow = window.open('', '_blank');
          printWindow.document.write(generatePrintHTML(data.data));
          printWindow.document.close();
          printWindow.print();
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error printing bill');
      }
    }

    function generatePrintHTML(billData) {
      let html = `
        <!DOCTYPE html>
        <html>
        <head>
          <title>Bill - ${billData.billNumber}</title>
          <style>
            body { font-family: Arial, sans-serif; padding: 20px; }
            h1 { text-align: center; }
            .bill-header { margin-bottom: 20px; }
            .section { margin: 20px 0; }
            .section h3 { border-bottom: 2px solid #333; padding-bottom: 5px; }
            .item { display: flex; justify-content: space-between; padding: 5px 0; }
            .total { font-weight: bold; font-size: 1.2em; margin-top: 20px; text-align: right; }
          </style>
        </head>
        <body>
          <h1>Health Haven</h1>
          <div class="bill-header">
            <p><strong>Bill Number:</strong> ${billData.billNumber}</p>
            <p><strong>Patient:</strong> ${billData.patientName || 'N/A'}</p>
            <p><strong>Patient ID:</strong> ${billData.patientId || 'N/A'}</p>
            <p><strong>Date:</strong> ${new Date(billData.createdAt).toLocaleString()}</p>
          </div>
      `;
      
      billData.sections.forEach(section => {
        html += `<div class="section"><h3>${section.name}</h3>`;
        section.items.forEach(item => {
          html += `<div class="item"><span>${item.name}${item.details ? ' - ' + item.details : ''}</span><span>₦${item.price ? item.price.toFixed(2) : '0.00'}</span></div>`;
        });
        if (section.subtotal > 0) {
          html += `<div class="item" style="font-weight: bold;"><span>Subtotal:</span><span>₦${section.subtotal.toFixed(2)}</span></div>`;
        }
        html += `</div>`;
      });
      
      html += `<div class="total">TOTAL: ₦${billData.total.toFixed(2)}</div>`;
      html += `</body></html>`;
      
      return html;
    }

    document.querySelectorAll('#drugsTableBody tr').forEach(row => {
      attachRowListeners(row);
    });

    calculateTotal();
    lucide.createIcons();
  </script>
</body>
</html>
