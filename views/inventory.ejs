<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory - Health Haven</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <div class="app-container">
    <!-- Sidebar Navigation -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="sidebar-logo">
          <span class="sidebar-logo-icon"><i data-lucide="activity" class="icon icon-lg"></i></span>
          <span class="sidebar-logo-text">Health Haven</span>
        </div>
        <button class="sidebar-toggle" onclick="toggleSidebar()" data-tooltip="Toggle sidebar">
          <i data-lucide="menu" id="toggleIcon" class="icon icon-md"></i>
        </button>
      </div>

      <nav class="sidebar-nav">
        <a href="/dashboard" class="nav-item" data-tooltip="Dashboard">
          <i data-lucide="layout-dashboard" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Dashboard</span>
        </a>

        <a href="/inventory" class="nav-item active" data-tooltip="Inventory">
          <i data-lucide="package" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Inventory</span>
        </a>

        <a href="/pos" class="nav-item" data-tooltip="Point of Sale">
          <i data-lucide="shopping-cart" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Point of Sale</span>
        </a>

        <a href="/transactions" class="nav-item" data-tooltip="Transactions">
          <i data-lucide="credit-card" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Transactions</span>
        </a>

        <a href="/alerts" class="nav-item" data-tooltip="Alerts">
          <i data-lucide="bell" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Alerts</span>
          <% if (typeof alertCount !== 'undefined' && alertCount > 0) { %>
            <span class="nav-item-badge"><%= alertCount %></span>
          <% } %>
        </a>

        <a href="/reports" class="nav-item" data-tooltip="Reports">
          <i data-lucide="bar-chart-3" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Reports</span>
        </a>
      </nav>

      <div class="sidebar-footer">
        <button class="nav-item" onclick="logout()" data-tooltip="Logout" style="width: 100%; border: none; background: none;">
          <i data-lucide="log-out" class="nav-item-icon icon icon-md"></i>
          <span class="nav-item-text">Logout</span>
        </button>
      </div>
    </aside>

    <!-- Main Content Area -->
    <main class="main-content">
      <div class="top-bar">
        <div>
          <h1 class="page-title" style="margin: 0; font-size: 1.5rem;">Inventory Management</h1>
          <p class="text-muted" style="margin: 0; font-size: 0.875rem;">Manage medical supplies and equipment</p>
        </div>
        <div class="flex items-center gap-md">
          <button class="btn btn-primary" onclick="openAddModal()">
            <i data-lucide="plus" class="icon icon-md"></i>
            <span>Add Item</span>
          </button>
          <% if (typeof user !== 'undefined' && user) { %>
            <span class="text-muted" style="font-size: 0.875rem; display: flex; align-items: center; gap: 0.25rem;"><i data-lucide="user" class="icon icon-sm"></i><%= user %></span>
          <% } %>
        </div>
      </div>

      <div class="page-container">
        <!-- Filters -->
        <div class="filters">
          <div class="form-group" style="margin: 0; flex: 1; min-width: 250px;">
            <input type="text" id="searchInput" class="form-input" placeholder="Search by name, SKU, or barcode..." value="<%= filters.search || '' %>">
          </div>
          <div class="form-group" style="margin: 0;">
            <select id="categoryFilter" class="form-select">
              <option value="">All Categories</option>
              <option value="medication" <%= filters.category === 'medication' ? 'selected' : '' %>>Medication</option>
              <option value="equipment" <%= filters.category === 'equipment' ? 'selected' : '' %>>Equipment</option>
              <option value="consumables" <%= filters.category === 'consumables' ? 'selected' : '' %>>Consumables</option>
              <option value="surgical" <%= filters.category === 'surgical' ? 'selected' : '' %>>Surgical</option>
              <option value="diagnostic" <%= filters.category === 'diagnostic' ? 'selected' : '' %>>Diagnostic</option>
            </select>
          </div>
          <div class="form-group" style="margin: 0;">
            <select id="stockFilter" class="form-select">
              <option value="">All Stock Levels</option>
              <option value="low" <%= filters.lowStock ? 'selected' : '' %>>Low Stock</option>
              <option value="expired" <%= filters.expired ? 'selected' : '' %>>Expired</option>
            </select>
          </div>
          <button class="btn btn-primary" onclick="applyFilters()"><i data-lucide="search" class="icon icon-md"></i><span>Filter</span></button>
          <button class="btn btn-neutral" onclick="clearFilters()"><i data-lucide="x" class="icon icon-md"></i><span>Clear</span></button>
        </div>

        <!-- Inventory Table -->
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>SKU</th>
                <th>Barcode</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Selling Price</th>
                <th>Expiry</th>
                <th>Status</th>
                <th style="text-align: center;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (items && items.length > 0) { %>
                <% items.forEach(item => { %>
                  <tr>
                    <td>
                      <strong title="<%= item.itemName %>"><%= item.itemName %></strong>
                      <% if (item.description) { %>
                        <div class="text-muted" style="font-size: 0.75rem; margin-top: 0.25rem;" title="<%= item.description %>"><%= item.description.substring(0, 50) %>...</div>
                      <% } %>
                    </td>
                    <td><code style="font-size: 0.8rem;" title="<%= item.sku %>"><%= item.sku %></code></td>
                    <td><code style="font-size: 0.8rem;" title="<%= item.barcode || 'N/A' %>"><%= item.barcode || 'N/A' %></code></td>
                    <td><span class="badge badge-primary"><%= item.category %></span></td>
                    <td>
                      <strong><%= item.quantity %></strong> <%= item.unitType %>
                      <% if (item.quantity <= item.minimumStock) { %>
                        <span class="badge badge-danger" style="margin-left: 0.5rem;">Low</span>
                      <% } %>
                    </td>
                    <td class="currency" style="font-family: var(--font-mono);">₦<%= item.unitPrice.toLocaleString('en-NG', {minimumFractionDigits: 2}) %></td>
                    <td class="currency" style="font-family: var(--font-mono);">₦<%= item.sellingPrice.toLocaleString('en-NG', {minimumFractionDigits: 2}) %></td>
                    <td>
                      <% if (item.expirationDate) { %>
                        <%= new Date(item.expirationDate).toLocaleDateString('en-NG') %>
                        <% if (new Date(item.expirationDate) < new Date()) { %>
                          <span class="badge badge-danger" style="display: block; margin-top: 0.25rem;">Expired</span>
                        <% } else if (new Date(item.expirationDate) < new Date(Date.now() + 90*24*60*60*1000)) { %>
                          <span class="badge badge-warning" style="display: block; margin-top: 0.25rem;">Soon</span>
                        <% } %>
                      <% } else { %>
                        <span class="text-muted">N/A</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (item.isActive) { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-neutral">Inactive</span>
                      <% } %>
                    </td>
                    <td style="text-align: center;">
                      <div class="flex gap-sm" style="justify-content: center;">
                        <button class="btn btn-icon btn-neutral tooltip" data-tooltip="Edit" onclick="editItem('<%= item._id %>')">
                          <i data-lucide="edit" class="icon icon-md"></i>
                        </button>
                        <button class="btn btn-icon btn-secondary tooltip" data-tooltip="Adjust Stock" onclick="adjustStock('<%= item._id %>', '<%= item.itemName %>', <%= item.quantity %>)">
                          <i data-lucide="bar-chart" class="icon icon-md"></i>
                        </button>
                        <button class="btn btn-icon btn-danger tooltip" data-tooltip="Deactivate" onclick="deactivateItem('<%= item._id %>', '<%= item.itemName %>')">
                          <i data-lucide="trash-2" class="icon icon-md"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="10" style="text-align: center; padding: 3rem; color: var(--neutral-500);">
                    <div style="margin-bottom: 1rem;"><i data-lucide="package" class="icon" style="width: 48px; height: 48px;"></i></div>
                    <div>No inventory items found</div>
                    <button class="btn btn-primary" onclick="openAddModal()" style="margin-top: 1rem;">Add Your First Item</button>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <!-- Add Item Modal -->
  <div id="addModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Add New Inventory Item</h3>
        <button class="modal-close" onclick="closeAddModal()">
          <i data-lucide="x" class="icon icon-md"></i>
        </button>
      </div>
      <form id="addItemForm">
        <div class="form-group">
          <label class="form-label">Item Name *</label>
          <input type="text" name="itemName" class="form-input" required>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">SKU *</label>
            <input type="text" name="sku" class="form-input" required>
          </div>
          <div class="form-group">
            <label class="form-label">Barcode (auto-generated if empty)</label>
            <input type="text" name="barcode" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Category *</label>
            <select name="category" class="form-select" required>
              <option value="medication">Medication</option>
              <option value="equipment">Equipment</option>
              <option value="consumables">Consumables</option>
              <option value="surgical">Surgical</option>
              <option value="diagnostic">Diagnostic</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Unit Type *</label>
            <select name="unitType" class="form-select" required>
              <option value="piece">Piece</option>
              <option value="box">Box</option>
              <option value="bottle">Bottle</option>
              <option value="vial">Vial</option>
              <option value="pack">Pack</option>
              <option value="strip">Strip</option>
              <option value="tube">Tube</option>
              <option value="sachet">Sachet</option>
            </select>
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Quantity *</label>
            <input type="number" name="quantity" class="form-input" required min="0">
          </div>
          <div class="form-group">
            <label class="form-label">Unit Price (₦) *</label>
            <input type="number" name="unitPrice" class="form-input" required min="0" step="0.01">
          </div>
          <div class="form-group">
            <label class="form-label">Selling Price (₦) *</label>
            <input type="number" name="sellingPrice" class="form-input" required min="0" step="0.01">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Minimum Stock</label>
            <input type="number" name="minimumStock" class="form-input" value="10" min="0">
          </div>
          <div class="form-group">
            <label class="form-label">Expiration Date</label>
            <input type="date" name="expirationDate" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Batch Number</label>
            <input type="text" name="batchNumber" class="form-input">
          </div>
          <div class="form-group">
            <label class="form-label">Storage Location</label>
            <input type="text" name="storageLocation" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Manufacturer</label>
            <input type="text" name="manufacturer" class="form-input">
          </div>
          <div class="form-group">
            <label class="form-label">Supplier</label>
            <input type="text" name="supplier" class="form-input">
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea name="description" class="form-textarea" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-neutral" onclick="closeAddModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Item</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Adjust Stock Modal -->
  <div id="adjustModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Adjust Stock</h3>
        <button class="modal-close" onclick="closeAdjustModal()">
          <i data-lucide="x" class="icon icon-md"></i>
        </button>
      </div>
      <form id="adjustStockForm">
        <input type="hidden" id="adjustItemId" name="itemId">
        <div class="form-group">
          <label class="form-label">Item</label>
          <input type="text" id="adjustItemName" class="form-input" readonly>
        </div>
        <div class="form-group">
          <label class="form-label">Current Quantity</label>
          <input type="number" id="adjustCurrentQty" class="form-input" readonly>
        </div>
        <div class="form-group">
          <label class="form-label">Adjustment (use negative for decrease) *</label>
          <input type="number" name="adjustment" class="form-input" required>
        </div>
        <div class="form-group">
          <label class="form-label">Reason *</label>
          <input type="text" name="reason" class="form-input" required placeholder="e.g., Received new stock, Damaged items removed">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-neutral" onclick="closeAdjustModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Adjust Stock</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Item Modal -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Edit Inventory Item</h3>
        <button class="modal-close" onclick="closeEditModal()">
          <i data-lucide="x" class="icon icon-md"></i>
        </button>
      </div>
      <form id="editItemForm">
        <input type="hidden" name="itemId">
        <div class="form-group">
          <label class="form-label">Item Name *</label>
          <input type="text" name="itemName" class="form-input" required>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">SKU *</label>
            <input type="text" name="sku" class="form-input" required>
          </div>
          <div class="form-group">
            <label class="form-label">Barcode</label>
            <input type="text" name="barcode" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Category *</label>
            <select name="category" class="form-select" required>
              <option value="medication">Medication</option>
              <option value="equipment">Equipment</option>
              <option value="consumables">Consumables</option>
              <option value="surgical">Surgical</option>
              <option value="diagnostic">Diagnostic</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Unit Type *</label>
            <select name="unitType" class="form-select" required>
              <option value="piece">Piece</option>
              <option value="box">Box</option>
              <option value="bottle">Bottle</option>
              <option value="vial">Vial</option>
              <option value="pack">Pack</option>
              <option value="strip">Strip</option>
              <option value="tube">Tube</option>
              <option value="sachet">Sachet</option>
            </select>
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Quantity *</label>
            <input type="number" name="quantity" class="form-input" required min="0">
          </div>
          <div class="form-group">
            <label class="form-label">Unit Price (₦) *</label>
            <input type="number" name="unitPrice" class="form-input" required min="0" step="0.01">
          </div>
          <div class="form-group">
            <label class="form-label">Selling Price (₦) *</label>
            <input type="number" name="sellingPrice" class="form-input" required min="0" step="0.01">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Minimum Stock</label>
            <input type="number" name="minimumStock" class="form-input" min="0">
          </div>
          <div class="form-group">
            <label class="form-label">Expiration Date</label>
            <input type="date" name="expirationDate" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Batch Number</label>
            <input type="text" name="batchNumber" class="form-input">
          </div>
          <div class="form-group">
            <label class="form-label">Storage Location</label>
            <input type="text" name="storageLocation" class="form-input">
          </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label class="form-label">Manufacturer</label>
            <input type="text" name="manufacturer" class="form-input">
          </div>
          <div class="form-group">
            <label class="form-label">Supplier</label>
            <input type="text" name="supplier" class="form-input">
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea name="description" class="form-textarea" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-neutral" onclick="closeEditModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Item</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const icon = document.getElementById('toggleIcon');
      sidebar.classList.toggle('collapsed');
      const iconName = sidebar.classList.contains('collapsed') ? 'menu' : 'x';
      icon.setAttribute('data-lucide', iconName);
      lucide.createIcons();
      localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
    }

    document.addEventListener('DOMContentLoaded', () => {
      const collapsed = localStorage.getItem('sidebarCollapsed') === 'true';
      if (collapsed) {
        document.getElementById('sidebar').classList.add('collapsed');
        document.getElementById('toggleIcon').setAttribute('data-lucide', 'menu');
      }
      lucide.createIcons();
    });

    async function logout() {
      await fetch('/api/auth/logout', { method: 'POST' });
      window.location.href = '/login';
    }

    function openAddModal() {
      document.getElementById('addModal').classList.add('active');
    }

    function closeAddModal() {
      document.getElementById('addModal').classList.remove('active');
      document.getElementById('addItemForm').reset();
    }

    function adjustStock(id, name, currentQty) {
      document.getElementById('adjustItemId').value = id;
      document.getElementById('adjustItemName').value = name;
      document.getElementById('adjustCurrentQty').value = currentQty;
      document.getElementById('adjustModal').classList.add('active');
    }

    function closeAdjustModal() {
      document.getElementById('adjustModal').classList.remove('active');
      document.getElementById('adjustStockForm').reset();
    }

    // Loading state helper functions
    function setButtonLoading(button, isLoading) {
      if (isLoading) {
        button.disabled = true;
        button.classList.add('loading');
        const spinner = document.createElement('span');
        spinner.className = 'spinner';
        button.insertBefore(spinner, button.firstChild);
      } else {
        button.disabled = false;
        button.classList.remove('loading');
        const spinner = button.querySelector('.spinner');
        if (spinner) spinner.remove();
      }
    }

    document.getElementById('addItemForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
      
      setButtonLoading(submitBtn, true);
      try {
        const response = await fetch('/api/inventory', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          alert('Item added successfully!');
          window.location.reload();
        } else {
          const error = await response.json();
          alert('Error: ' + (error.error || 'Failed to add item'));
          setButtonLoading(submitBtn, false);
        }
      } catch (error) {
        alert('Error: ' + error.message);
        setButtonLoading(submitBtn, false);
      }
    });

    document.getElementById('adjustStockForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const formData = new FormData(e.target);
      const id = formData.get('itemId');
      const adjustment = parseInt(formData.get('adjustment'));
      const reason = formData.get('reason');
      
      setButtonLoading(submitBtn, true);
      try {
        const response = await fetch(`/api/inventory/${id}/adjust`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ adjustment, reason })
        });
        
        if (response.ok) {
          alert('Stock adjusted successfully!');
          window.location.reload();
        } else {
          const error = await response.json();
          alert('Error: ' + (error.error || 'Failed to adjust stock'));
          setButtonLoading(submitBtn, false);
        }
      } catch (error) {
        alert('Error: ' + error.message);
        setButtonLoading(submitBtn, false);
      }
    });

    document.getElementById('editItemForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const formData = new FormData(e.target);
      const id = formData.get('itemId');
      const data = Object.fromEntries(formData.entries());
      delete data.itemId;
      
      setButtonLoading(submitBtn, true);
      try {
        const response = await fetch(`/api/inventory/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          alert('Item updated successfully!');
          window.location.reload();
        } else {
          const error = await response.json();
          alert('Error: ' + (error.error || 'Failed to update item'));
          setButtonLoading(submitBtn, false);
        }
      } catch (error) {
        alert('Error: ' + error.message);
        setButtonLoading(submitBtn, false);
      }
    });

    // Real-time filter and search functionality
    let filterTimeout;
    
    function applyFiltersRealtime() {
      clearTimeout(filterTimeout);
      filterTimeout = setTimeout(() => {
        const search = document.getElementById('searchInput').value.toLowerCase();
        const category = document.getElementById('categoryFilter').value;
        const stock = document.getElementById('stockFilter').value;
        const rows = document.querySelectorAll('.table tbody tr');
        
        rows.forEach(row => {
          if (row.cells.length === 1) return; // Skip empty state row
          
          const itemName = row.cells[0].textContent.toLowerCase();
          const sku = row.cells[1].textContent.toLowerCase();
          const barcode = row.cells[2].textContent.toLowerCase();
          const itemCategory = row.cells[3].textContent.trim();
          const quantityCell = row.cells[4];
          const expiryCell = row.cells[7];
          
          let matchesSearch = true;
          let matchesCategory = true;
          let matchesStock = true;
          
          // Search filter
          if (search) {
            matchesSearch = itemName.includes(search) || sku.includes(search) || barcode.includes(search);
          }
          
          // Category filter
          if (category) {
            matchesCategory = itemCategory === category;
          }
          
          // Stock filter
          if (stock === 'low') {
            matchesStock = quantityCell.querySelector('.badge-danger') !== null;
          } else if (stock === 'expired') {
            matchesStock = expiryCell.querySelector('.badge-danger') !== null;
          }
          
          // Show/hide row based on all filters
          if (matchesSearch && matchesCategory && matchesStock) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      }, 300); // Debounce for 300ms
    }
    
    function applyFilters() {
      applyFiltersRealtime();
    }

    function clearFilters() {
      document.getElementById('searchInput').value = '';
      document.getElementById('categoryFilter').value = '';
      document.getElementById('stockFilter').value = '';
      applyFiltersRealtime();
    }
    
    // Attach real-time listeners
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('searchInput').addEventListener('input', applyFiltersRealtime);
      document.getElementById('categoryFilter').addEventListener('change', applyFiltersRealtime);
      document.getElementById('stockFilter').addEventListener('change', applyFiltersRealtime);
    });

    async function deactivateItem(id, name) {
      if (!confirm(`Deactivate "${name}"?`)) return;
      
      const btn = event.target.closest('button');
      setButtonLoading(btn, true);
      try {
        const response = await fetch(`/api/inventory/${id}`, { method: 'DELETE' });
        if (response.ok) {
          alert('Item deactivated successfully!');
          window.location.reload();
        } else {
          alert('Failed to deactivate item');
          setButtonLoading(btn, false);
        }
      } catch (error) {
        alert('Error: ' + error.message);
        setButtonLoading(btn, false);
      }
    }

    async function editItem(id) {
      try {
        const response = await fetch(`/api/inventory/${id}`);
        if (!response.ok) {
          alert('Failed to load item details');
          return;
        }
        const result = await response.json();
        const item = result.data;
        
        // Populate edit modal with item data
        document.querySelector('#editModal [name="itemId"]').value = item._id;
        document.querySelector('#editModal [name="itemName"]').value = item.itemName;
        document.querySelector('#editModal [name="sku"]').value = item.sku;
        document.querySelector('#editModal [name="barcode"]').value = item.barcode || '';
        document.querySelector('#editModal [name="category"]').value = item.category;
        document.querySelector('#editModal [name="unitType"]').value = item.unitType;
        document.querySelector('#editModal [name="quantity"]').value = item.quantity;
        document.querySelector('#editModal [name="unitPrice"]').value = item.unitPrice;
        document.querySelector('#editModal [name="sellingPrice"]').value = item.sellingPrice;
        document.querySelector('#editModal [name="minimumStock"]').value = item.minimumStock;
        document.querySelector('#editModal [name="expirationDate"]').value = item.expirationDate ? item.expirationDate.split('T')[0] : '';
        document.querySelector('#editModal [name="batchNumber"]').value = item.batchNumber || '';
        document.querySelector('#editModal [name="storageLocation"]').value = item.storageLocation || '';
        document.querySelector('#editModal [name="manufacturer"]').value = item.manufacturer || '';
        document.querySelector('#editModal [name="supplier"]').value = item.supplier || '';
        document.querySelector('#editModal [name="description"]').value = item.description || '';
        
        document.getElementById('editModal').classList.add('active');
      } catch (error) {
        alert('Error loading item: ' + error.message);
      }
    }
    
    function closeEditModal() {
      document.getElementById('editModal').classList.remove('active');
      document.getElementById('editItemForm').reset();
    }

    // Close modals on outside click
    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.classList.remove('active');
      }
    }

    // Click-to-copy functionality with toast notification
    function showToast(message) {
      // Remove existing toast if any
      const existingToast = document.querySelector('.toast');
      if (existingToast) {
        existingToast.remove();
      }

      // Create toast element
      const toast = document.createElement('div');
      toast.className = 'toast';
      toast.innerHTML = `
        <i data-lucide="check-circle" class="icon icon-md" style="color: var(--success);"></i>
        <span>${message}</span>
      `;
      document.body.appendChild(toast);
      
      // Initialize Lucide icons for the toast
      lucide.createIcons();

      // Auto-hide after 2 seconds
      setTimeout(() => {
        toast.classList.add('hiding');
        setTimeout(() => toast.remove(), 300);
      }, 2000);
    }

    async function copyToClipboard(text, element) {
      try {
        await navigator.clipboard.writeText(text);
        showToast('Copied to Clipboard');
      } catch (err) {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        document.body.appendChild(textArea);
        textArea.select();
        try {
          document.execCommand('copy');
          showToast('Copied to Clipboard');
        } catch (err) {
          console.error('Failed to copy:', err);
        }
        document.body.removeChild(textArea);
      }
    }

    // Add click listeners to copyable elements
    document.addEventListener('DOMContentLoaded', () => {
      // Attach copy functionality to item names, SKUs, barcodes, and descriptions
      document.querySelectorAll('.table td code, .table td strong, .table td .text-muted[title]').forEach(element => {
        element.addEventListener('click', (e) => {
          e.stopPropagation();
          const textToCopy = element.getAttribute('title') || element.textContent.trim();
          copyToClipboard(textToCopy, element);
        });
      });
    });
  </script>
