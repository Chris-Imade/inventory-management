# Application Configuration
NODE_ENV=development
APP_PORT=3000
APP_NAME=Medical Inventory Management System

# Currency: Nigerian Naira (â‚¦)
# All prices are in Naira

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Single User Credentials (Change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisPassword123!

# Clinic/Store Information (for receipts and reports)
CLINIC_NAME=Medical Clinic Name
CLINIC_ADDRESS=123 Medical Street, City, State, ZIP
CLINIC_PHONE=+1-234-567-8900
CLINIC_EMAIL=info@medicalclinic.com

# Alert Thresholds
LOW_STOCK_THRESHOLD=10
EXPIRY_WARNING_DAYS_30=30
EXPIRY_WARNING_DAYS_60=60
EXPIRY_WARNING_DAYS_90=90

# Thermal Printer Configuration (Optional)
PRINTER_ENABLED=false
PRINTER_TYPE=epson
PRINTER_INTERFACE=usb
PRINTER_WIDTH=48

# Email Configuration (Future use)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
